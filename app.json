{
  "expo": {
    "name": "Krio Audio Bible",
    "slug": "krio-audio-bible",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0e27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.newlifeinkossohtown.krioaudiobible"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#0a0e27"
      },
      "package": "com.newlifeinkossohtown.krioaudiobible",
      "permissions": [
        "INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      "expo-av",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "597c1b94-9e14-4f41-ad1f-2fc8db9e2a09"
      }
    },
    "owner": "alphadumbuya123"
  }
}
